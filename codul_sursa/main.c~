#include <allegro5/allegro.h>
#include <allegro5/allegro_image.h>

#define SCREEN_WIDTH 800
#define SCREEN_HEIGHT 400

int main() {
    // 1️⃣ Inițializare Allegro și Addon-ul pentru imagini
    al_init();
    al_init_image_addon();

    // 2️⃣ Creează fereastra jocului
    ALLEGRO_DISPLAY* display = al_create_display(SCREEN_WIDTH, SCREEN_HEIGHT);
    if (!display) {
        printf("Eroare: Nu s-a putut crea fereastra!\n");
        return -1;
    }

    // 3️⃣ Încarcă imaginea dinozaurului
    ALLEGRO_BITMAP* dino = al_load_bitmap("assets/dino.png");
    if (!dino) {
        printf("Eroare: Nu s-a putut încărca imaginea dino.png!\n");
        return -1;
    }

    // 4️⃣ Desenează imaginea pe ecran
    al_clear_to_color(al_map_rgb(255, 255, 255)); // Fundal alb
    al_draw_bitmap(dino, 50, 250, 0); // Desenează dinozaurul la (50, 250)
    al_flip_display();
    al_rest(3.0); // Așteaptă 3 secunde

    // 5️⃣ Eliberează memoria
    al_destroy_bitmap(dino);
    al_destroy_display(display);

    return 0;
}
